extends layout

block content
  .row.banner
    .col-12
      h1 Register for Drink Order
  .row
    .col-12.col-md-8
      form(action="/register", method="post", role="form")
        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="name") Name
          .col-12.col-sm-10
            input#name.form-control(type="text", name="name", placeholder="Enter your name")
        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="email") Email
          .col-12.col-sm-10
            input#email.form-control(type="email", name="email", placeholder="Enter email")
        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="password") Password
          .col-12.col-sm-10
            input#password.form-control(type="password", name="password", placeholder="Enter password")
        button.btn.btn-primary.float-right(type="submit") Register
    .col-12.col-md-4
      p.lead Already have an account? 
        a(href="/login") Login here!
