extends layout

block content
  .row.banner
    .col-12
      h1= bar.name
  .row
    .col-12.col-lg-9
      .row
        .col-12.col-md-6
          p.rating
            i.fa.fa-star
            i.fa.fa-star
            i.fa.fa-star
            i.fa.fa-star-o
            i.fa.fa-star-o
          p= bar.address
          .card.card-primary
            .card-block
              h2.card-title Opening hours
              each time in bar.openingTimes
                p.card-text= time
          .card.card-primary
            .card-block
              h2.card-title Facilities
              each facility in bar.facilities
                span.badge.badge-warning
                  i.fa.fa-check
                  | &nbsp;= facility
        .col-12.col-md-6.location-map
          .card.card-primary
            .card-block
              h2.card-title Location map
              img.img-fluid.rounded(src=`https://maps.googleapis.com/maps/api/staticmap?center=${bar.coords[0]},${bar.coords[1]}&zoom=17&size=400x350&sensor=false&markers=${bar.coords[0]},${bar.coords[1]}&scale=2`)
      .row
        .col-12
          .card.card-primary.review-card
            .card-block
              a.btn.btn-primary.float-right(href=`/bar/${bar.slug}/review/new`) Add review
              h2.card-title Customer reviews
              each review in bar.reviews
                .row.review
                  .col-12.no-gutters.review-header
                    span.rating
                      each star in review.rating
                        i.fa.fa-star
                      each emptyStar in (5 - review.rating)
                        i.fa.fa-star-o
                    span.reviewAuthor= review.author
                    small.reviewTimestamp= review.createdOn.toLocaleDateString()
                  .col-12
                    p= review.reviewText
    .col-12.col-lg-3
      p.lead= `${bar.name} offers accessible wifi and space to sit down with your laptop and enjoy some drinks.`
